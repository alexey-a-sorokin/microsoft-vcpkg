if(NOT TARGET lcms2::lcms2)
    add_library(lcms2::lcms2 UNKNOWN IMPORTED)
    get_filename_component(z_vcpkg_lcms2_root "${CMAKE_CURRENT_LIST_FILE}" PATH)
    get_filename_component(z_vcpkg_lcms2_root "${z_vcpkg_lcms2_root}" PATH)
    get_filename_component(z_vcpkg_lcms2_root "${z_vcpkg_lcms2_root}" PATH)

    set_target_properties(lcms2::lcms2 PROPERTIES
      INTERFACE_INCLUDE_DIRECTORIES "${z_vcpkg_lcms2_root}/include"
    )

    find_library(Z_VCPKG_LCMS2_LIBRARY_RELEASE NAMES lcms2 PATHS "${z_vcpkg_lcms2_root}/lib" NO_DEFAULT_PATH)
    if(EXISTS "${Z_VCPKG_LCMS2_LIBRARY_RELEASE}")
        set_property(TARGET lcms2::lcms2 APPEND PROPERTY IMPORTED_CONFIGURATIONS "Release")
        set_target_properties(lcms2::lcms2 PROPERTIES IMPORTED_LOCATION_RELEASE "${Z_VCPKG_LCMS2_LIBRARY_RELEASE}")
    endif()

    find_library(Z_VCPKG_LCMS2_LIBRARY_DEBUG NAMES lcms2 PATHS "${z_vcpkg_lcms2_root}/debug/lib" NO_DEFAULT_PATH)
    if(EXISTS "${Z_VCPKG_LCMS2_LIBRARY_DEBUG}")
        set_property(TARGET lcms2::lcms2 APPEND PROPERTY IMPORTED_CONFIGURATIONS "Debug")
        set_target_properties(lcms2::lcms2 PROPERTIES IMPORTED_LOCATION_DEBUG "${Z_VCPKG_LCMS2_LIBRARY_DEBUG}")
    endif()

    unset(z_vcpkg_lcms2_root)
endif()
